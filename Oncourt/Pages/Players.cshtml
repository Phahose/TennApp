@page
@model OnCourt.Pages.PlayersModel
@{
    Layout = "HomeHeader";
}
<div class="container">
    <div class="card-first-sec">
        <div class="profile-nav">
            <h3>Welcome Nick</h3>
            <ul class="profile-switch">
                <li><a href="~/Profile"><img src="~/img/myImage2.jpg" alt="Image 2" class="profile-pic" /></a>Nicholas</li>
            </ul>
            <ul class="tab-Nav">
                <li><a href="~/Messages">Messages</a></li>
                <li><a href="~/Players">Players</a></li>
            </ul>
        </div>
        <div>
            <ul>
                <li><a href="#">Email</a></li>
                <li><a href="#">Phone Number</a></li>
                <li><a href="#">Age</a></li>
                <li><a href="#">Preferred Shot</a></li>
                <li><a href="#">Level</a></li>
                <li><a href="#">Sport</a></li>
            </ul>
        </div>
    </div>
    <div class="card-section">
        <div class="card-container">
            <div class="card swiper swiper-container">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <img src="~/img/myImage.jpg" alt="Image 1" />
                    </div>
                    <div class="swiper-slide">
                        <img src="~/img/myImage2.jpg" alt="Image 2" />
                    </div>
                </div>

                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
            <div class="card-info">
                <form name="select-Form" method="post">
                    <h3>Nicholas</h3>
                    <p>Intermediate</p>
                    <p>Preferred Shot: Serve</p>
                    <!-- Yes and No Icons -->
                    <div class="icon-container">
                        <input type="submit" class="icon-button yes-button" value="✔" />
                        <input type="submit" class="icon-button no-button" value="✖" />
                    </div>
                </form>            
            </div>
        </div>
    </div>

</div>
